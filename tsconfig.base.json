{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2016",
    "module": "es2020",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@types/zepto/index.d.ts",
      "node_modules/@types/d3/index.d.ts",
      "node_modules/localforage/typings/localforage.d.ts"
    ],
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "es2018",
      "es2019",
      "es2020",
      "dom"
    ],
    "paths": {
      "ngx-canvas": [
        "dist/ngx-canvas/ngx-canvas",
        "dist/ngx-canvas"
      ],
      "ngx-local": [
        "dist/ngx-local/ngx-local",
        "dist/ngx-local"
      ],
      "ngx-prism": [
        "dist/ngx-prism/ngx-prism",
        "dist/ngx-prism"
      ]
    }
  }
}
