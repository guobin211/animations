{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "es2018",
      "es2019",
      "es2020",
      "dom"
    ]
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts",
    "node_modules/@types/zepto/index.d.ts",
    "node_modules/@types/d3/index.d.ts",
    "node_modules/localforage/typings/localforage.d.ts"
  ],
  "include": [
    "src/**/*.d.ts",
    "src/typings.d.ts"
  ],
  "exclude": [
    "**/*.stories.ts"
  ]
}
