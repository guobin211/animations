{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts",
    "node_modules/@types/zepto/index.d.ts",
    "node_modules/@types/d3/index.d.ts",
    "node_modules/localforage/typings/localforage.d.ts"
  ],
  "include": [
    "src/**/*.d.ts",
    "src/typings.d.ts"
  ],
  "exclude": [
    "**/*.stories.ts"
  ]
}
